    <message id="m0075" time="2010-08-24 19:47:01 UTC" participant="153902">
      <body>/shrug</body>
    </message>
    <message id="m0076" time="2010-08-24 19:47:07 UTC" participant="153902">
      <body>I don't know what to tell you.</body>
